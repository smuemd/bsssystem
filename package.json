{
  "name": "styled-system",
  "version": "3.1.11",
  "description": "Responsive, theme-based style props for building design systems with React",
  "main": "dist/bsssystem.js",
  "module": "dist/bsssystem.esm.js",
  "sideEffects": false,
  "scripts": {
    "prepare": "npm run clean && npm run build:cjs && npm run build:esm && npm run build",
    "clean": "rm -rf dist && mkdir dist",
    "build": "rollup -c",
    "build:cjs": "cross-env NODE_ENV=cjs babel src -o dist/index.cjs.js",
    "build:esm": "cross-env NODE_ENV=esm babel src -o dist/index.esm.js",
    "start": "mdx-go docs",
    "docs": "mdx-go build docs -d site",
    "logo": "npx repng docs/Logo.js -d docs -f logo.png -w 512 -h 512 -p '{\"size\":512}'",
    "logo-svg": "scrs docs/Logo.js --svg > docs/logo.svg",
    "size": "npx bundlesize",
    "cover": "nyc report --reporter=html --reporter=lcov > coverage.lcov",
    "codecov": "nyc report --reporter=html --reporter=lcov > coverage.lcov && npx codecov",
    "lint": "standard | snazzy",
    "pretest": "npm run lint -s",
    "test": "NODE_ENV=test nyc ava",
    "test::background": "NODE_ENV=test ava test/background.test.js",
    "test::border": "NODE_ENV=test ava test/border.test.js",
    "test::core": "NODE_ENV=test ava test/core.test.js",
    "test::layout": "NODE_ENV=test ava test/layout.test.js",
    "test::misc": "NODE_ENV=test ava test/misc.test.js",
    "test::position": "NODE_ENV=test ava test/position.test.js",
    "test::typography": "NODE_ENV=test ava test/typography.test.js",
    "test::util": "NODE_ENV=test ava test/util.test.js",
    "test::variants": "NODE_ENV=test ava test/variants.test.js",
    "bench": "node bench"
  },
  "keywords": [
    "react",
    "css-in-js",
    "styled-components",
    "glamorous"
  ],
  "author": "Brent Jackson",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "ava": "^1.0.0-beta.8",
    "benchmark": "^2.1.4",
    "cross-env": "^5.2.0",
    "is-ci": "^1.1.0",
    "mdx-go": "^2.0.0-29",
    "nyc": "^12.0.2",
    "react": "^16.4.0",
    "react-live": "^1.11.0",
    "react-test-renderer": "^16.4.0",
    "rebass": "^3.0.0-8",
    "rollup": "^0.67.3",
    "rollup-plugin-buble": "^0.19.4",
    "rollup-plugin-filesize": "^5.0.1",
    "rollup-plugin-uglify": "^6.0.0",
    "scrs": "^1.1.0",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1",
    "styled-components": "^4.0.0"
  },
  "ava": {
    "files": [
      "test/**/*.test.js",
      "!test/index.js"
    ],
    "require": [
      "@babel/register"
    ],
    "verbose": "true"
  },
  "nyc": {
    "exclude": [
      "test/**/*",
      "**/babel.config.js",
      "docs",
      "bench",
      "examples"
    ]
  },
  "bundlesize": [
    {
      "path": "dist/*"
    }
  ],
  "standard": {
    "ignore": [
      "/packages/**",
      "/examples/**",
      "/docs/**",
      "/src/**",
      "/test/index.js",
      "/dist/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jxnblk/styled-system.git"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2",
    "prop-types": "^15.6.2"
  }
}
